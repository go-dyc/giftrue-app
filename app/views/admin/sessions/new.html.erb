<div class="text-center">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">관리자 로그인</h2>
  <p class="text-gray-600 mb-8">기념패 주문 관리 시스템</p>
</div>

<%= form_with url: admin_login_path, method: :post, local: true, class: "space-y-6" do |form| %>
  <div>
    <%= form.label :admin_id, "관리자 ID", class: "form-label" %>
    <%= form.text_field :admin_id, 
          class: "form-input",
          placeholder: "관리자 ID를 입력하세요",
          required: true,
          autofocus: true %>
  </div>

  <div>
    <%= form.label :password, "비밀번호", class: "form-label" %>
    <%= form.password_field :password, 
          class: "form-input",
          placeholder: "비밀번호를 입력하세요",
          required: true %>
  </div>

  <div>
    <%= form.submit "로그인", class: "btn-primary w-full" %>
  </div>
<% end %>

